pipeline {
    agent any
    tools{
        maven "3.6.0"
    }
    stages{
        stage('Build Maven'){
            steps{
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/simrangawri/bench_assignment_devops']]])
                sh 'mvn clean install'
            }
        }
        stage('Build docker image'){
            steps{
                script{
                    sh 'docker build -t javatechie/devops_assignment .'
                }
            }
        }
        stage('Push image to Hub'){
            steps{
                script{
                   withCredentials([string(credentialsId: 'simran123', variable: 'simran123456')]) {
                   sh 'docker login -u simran123 -p ${simran123456}'

}
                   sh 'docker push javatechie/devops_assignment'
                }
            }
        }
    }
}